<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Button
        android:id="@+id/bt_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send" />

    <EditText
        android:id="@+id/et_ipAddress"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:text="192.168.0.31"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:gravity="right"
        android:cursorVisible="false" />

    <TextSwitcher
        android:id="@+id/ts_inTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:enabled="false" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="In"
        android:layout_above="@+id/ts_inTemp"
        android:textSize="30dp" />

    <TextSwitcher
        android:id="@+id/ts_outTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:enabled="false" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Out"
        android:layout_above="@+id/ts_outTemp"
        android:layout_alignParentRight="true"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_timeTemp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/ts_inTemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

</RelativeLayout>
